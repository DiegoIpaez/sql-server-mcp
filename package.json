{
  "name": "sql-server-mcp",
  "module": "index.ts",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch ./src/index.ts",
    "build": "bun build ./src/index.ts --outdir ./build --minify --target node",
    "start": "bun run ./build/index.js",
    "format": "biome format --write .",
    "lint": "biome lint --write .",
    "check": "biome check .",
    "postinstall": "prisma generate"
  },
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "dotenv": "^17.2.3",
    "prisma": "^7.0.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@biomejs/biome": "^2.3.14",
    "@modelcontextprotocol/sdk": "^1.22.0",
    "@prisma/adapter-mssql": "^7.0.0",
    "@prisma/client": "^7.0.0",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0"
  }
}
